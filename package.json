{
  "name": "eslint-config-tree",
  "version": "5.0.3",
  "description": "Shared Tree configuration that contains overrides and enhancements on top of the base frontier configuration.",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fs-webdev/eslint-config-tree.git"
  },
  "keywords": [
    "eslint",
    "eslint-config",
    "eslint-config-tree"
  ],
  "homepage": "https://github.com/fs-webdev/eslint-config-tree#readme",
  "githubAutomatorOptions": {
    "disableSlackNotifications": true
  },
  "ava": {
    "files": [
      "demo/test/*.js"
    ]
  },
  "dependencies": {
    "babel-eslint": "^8",
    "eslint": "^7",
    "eslint-config-standard": "^16",
    "eslint-config-standard-react": "^11",
    "eslint-plugin-bestpractices": "git+https://github.com/skye2k2/eslint-plugin-bestpractices.git",
    "eslint-plugin-deprecate": "^0.7",
    "eslint-plugin-html": "^6",
    "eslint-plugin-import": "^2",
    "eslint-plugin-jsdoc": "^36",
    "eslint-plugin-json": "^3",
    "eslint-plugin-node": "^11",
    "eslint-plugin-promise": "^5",
    "eslint-plugin-sonarjs": "^0.10",
    "eslint-plugin-test-selectors": "^1"
  },
  "devDependencies": {
    "ava": "^2.4.0",
    "eslint-config-frontier": "github:fs-webdev/eslint-config-frontier",
    "file-manager-js": "^3.1.6",
    "husky": "^3.1.0"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm test"
    }
  },
  "resolutions": {
    "eslint": "^7"
  },
  "scripts": {
    "lint": "eslint demo --ext .html,.js,.json",
    "lint:fix": "eslint demo --ext .html,.js,.json --fix",
    "lint:quiet": "eslint demo --ext .html,.js,.json --quiet",
    "lint:report": "eslint demo --ext .html,.js,.json '**/*.html' --format html --output-file ./reports/linter/lintresults.html & eslint demo --ext .html,.js,.json --format json --output-file ./reports/linter/lintresults.json",
    "lint:snapshot": "eslint demo --ext .html,.js,.json --no-color --output-file ./demo/test/snapshots/local-linting-output.txt; eslint --print-config file.js > ./demo/test/snapshots/local-linting-final-config.json; npm run test:format",
    "preinstall": "git config --global url.https://github.com/.insteadOf git://github.com/",
    "postinstall": "npm rebuild husky",
    "test": "npm run lint:snapshot; ava",
    "test:format": "sed -i .tmp 's|^.*/demo/||g' demo/test/snapshots/local-linting-output.txt; node demo/test/snapshots/format-config.js",
    "test:update": "npm run lint:snapshot; ava --update-snapshots"
  }
}
